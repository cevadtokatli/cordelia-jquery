{
  "name": "cordelia-jquery",
  "version": "1.0.0",
  "description": "Color picker for web and mobile browsers",
  "keywords": ["javascript", "jquery", "colorpicker"],
  "author": {
    "name": "Cevad Tokatli",
    "email": "cevadtokatli@hotmail.com",
    "url": "http://cevadtokatli.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cevadtokatli/cordelia-jquery"
  },
  "files": [
    "css",
    "js",
    "icons"
  ],
  "license": "MIT",
  "main": "js/cordelia.min.js",
  "scripts": {
